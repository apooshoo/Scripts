<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="ScripterWinUi.Pages.FolderPreviewPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ScripterWinUi.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Folder Selection Section -->
        <StackPanel Grid.Row="0" Margin="20" Spacing="15">
            <TextBlock Text="Folder Selection &amp; Preview" Style="{ThemeResource TitleTextBlockStyle}" />
            
            <!-- Folder Path Selection -->
            <StackPanel Spacing="8">
                <TextBlock Text="Folder Path:" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="FolderPathTextBox" Grid.Column="0" PlaceholderText="Select a folder..." 
                             LostFocus="FolderPathTextBox_LostFocus" />
                    <Button x:Name="BrowseButton" Grid.Column="1" Content="Browse..." Click="BrowseButton_Click" 
                            Margin="8,0,0,0" />
                </Grid>
            </StackPanel>

            <!-- Folder Selection Options -->
            <StackPanel Spacing="8">
                <TextBlock Text="Selection Mode:" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                <ComboBox x:Name="FolderSelectionComboBox" MinWidth="200" 
                          SelectionChanged="FolderSelectionComboBox_SelectionChanged" />
            </StackPanel>
        </StackPanel>

        <!-- Preview Section -->
        <ScrollViewer Grid.Row="1" Margin="20,0,20,20">
            <StackPanel Spacing="15">
                <TextBlock Text="Preview" Style="{ThemeResource SubtitleTextBlockStyle}" />
                
                <!-- Files Preview -->
                <StackPanel x:Name="FilesPreviewSection" Spacing="8">
                    <TextBlock Text="Files:" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                    <ListView x:Name="PreviewFiles" MaxHeight="200" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                              BorderThickness="1" CornerRadius="4">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                    
                    <!-- AI Rename Section -->
                    <Border x:Name="AiSuggestionSection" Visibility="Collapsed"
                            Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                            BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="1" 
                            CornerRadius="8" Padding="16" Margin="0,8,0,0">
                        <StackPanel Spacing="12">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE945;" FontSize="16" />
                                <TextBlock Text="AI-Powered Rename" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                            </StackPanel>
                            
                            <TextBlock Text="Use local LLM to automatically generate uniform, zero-padded file names." 
                                       Style="{ThemeResource CaptionTextBlockStyle}" 
                                       Foreground="{ThemeResource TextFillColorSecondaryBrush}" 
                                       TextWrapping="Wrap" />
                            
                            <Button x:Name="AiSuggestButton" Content="Generate AI Rename Plan" 
                                    Click="AiSuggestButton_Click" 
                                    Style="{ThemeResource AccentButtonStyle}" />
                            
                            <ProgressRing x:Name="AiProgressRing" IsActive="False" Visibility="Collapsed" />
                            
                            <!-- Rename Preview Result -->
                            <Border x:Name="SuggestionResultPanel" Visibility="Collapsed"
                                    Background="{ThemeResource CardBackgroundFillColorSecondaryBrush}"
                                    CornerRadius="4" Padding="12">
                                <StackPanel Spacing="12">
                                    <TextBlock x:Name="SuggestionResultText" Text="AI Rename Preview:" 
                                               Style="{ThemeResource BodyStrongTextBlockStyle}" />
                                    
                                    <!-- Rename Preview List -->
                                    <ListView x:Name="RenamePreviewList" MaxHeight="200" 
                                              BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                                              BorderThickness="1" CornerRadius="4"
                                              SelectionMode="None">
                                        <ListView.ItemTemplate>
                                            <DataTemplate>
                                                <Grid Padding="4,2">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*" />
                                                        <ColumnDefinition Width="Auto" />
                                                        <ColumnDefinition Width="*" />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Text="{Binding OldName}" 
                                                               TextTrimming="CharacterEllipsis"
                                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                                    <FontIcon Grid.Column="1" Glyph="&#xE72A;" FontSize="12" 
                                                              Margin="8,0" VerticalAlignment="Center" />
                                                    <TextBlock Grid.Column="2" Text="{Binding NewName}" 
                                                               TextTrimming="CharacterEllipsis"
                                                               FontWeight="SemiBold" />
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    
                                    <TextBlock x:Name="RenameCountText" 
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}" />
                                    
                                    <TextBlock x:Name="SuggestionReasoningText" 
                                               Style="{ThemeResource CaptionTextBlockStyle}"
                                               Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                               TextWrapping="Wrap" />
                                    
                                    <Button x:Name="AcceptSuggestionButton" Content="Execute Rename" 
                                            Click="AcceptSuggestionButton_Click"
                                            Style="{ThemeResource AccentButtonStyle}" />
                                </StackPanel>
                            </Border>
                            
                            <!-- Error Display -->
                            <Border x:Name="SuggestionErrorPanel" Visibility="Collapsed"
                                    Background="{ThemeResource SystemFillColorCriticalBackgroundBrush}"
                                    CornerRadius="4" Padding="12">
                                <TextBlock x:Name="SuggestionErrorText" TextWrapping="Wrap" />
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>

                <!-- Folders Preview -->
                <StackPanel x:Name="FoldersPreviewSection" Spacing="8">
                    <TextBlock Text="Folders:" Style="{ThemeResource BodyStrongTextBlockStyle}" />
                    <ListView x:Name="PreviewFolders" MaxHeight="200" BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" 
                              BorderThickness="1" CornerRadius="4">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Name}" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="{ThemeResource CardBackgroundFillColorDefaultBrush}" 
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}" BorderThickness="0,1,0,0" Padding="20,10">
            <TextBlock x:Name="StatusTextBlock" Text="Ready" Style="{ThemeResource CaptionTextBlockStyle}" />
        </Border>
    </Grid>
</Page>
